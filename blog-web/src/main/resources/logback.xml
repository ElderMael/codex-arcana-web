<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %.-1level [%-35.35logger{35}] \(%-20.20thread{20}\) - %m%n</pattern>
        </encoder>
    </appender>

    <logger name="org.mael.blog" level="DEBUG" />

    <logger name="org.thymeleaf" level="OFF" />

    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>